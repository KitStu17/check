<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyantree.check.web.repository.FileWebRepository">

    <!-- 고정 확장자 정보 조회 -->
    <select id="selectFixedExtensionList" resultType="com.cyantree.check.web.model.FileExtension$FixFileVM">
    SELECT seqno, extension_name, is_blocked
    FROM file_extension
    WHERE is_fixed = TRUE
    ORDER BY seqno
    </select>

    <!-- 커스텀 확장자 정보 조회 -->
    <select id="selectCustomExtensionList" resultType="com.cyantree.check.web.model.FileExtension$CustomFileVM">
    SELECT seqno, extension_name, is_blocked
    FROM file_extension
    WHERE is_fixed = FALSE AND is_blocked = TRUE
    ORDER BY seqno
    </select>
</mapper>
